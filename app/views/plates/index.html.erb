<p id="notice"><%= notice %></p>

<h1>Listing Plates</h1>

<% @courses.each do |course| %>
  <%= course.name %><br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% course.plates.each do |plate| %>
      <tr>
        <td><%= link_to plate.name , edit_plate_path(plate) %></td>
        <td><%= plate.price %></td>
        <td><%= plate.description %></td>
        <td><%= plate.course_id %></td>
        <td><%= link_to 'New Plate', new_plate_path %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
